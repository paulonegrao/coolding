<%= @s.errors.full_messages.join(", ") %>

<%= form_for @s do |f| %>
<div class="form-group">
    <%= f.label(:name) %>
    <%= f.text_field(:name, {class: "form-control"}) %>
    <p class="help-block">Enter the Supporter's name</p>
</div>
<div class="form-group">
   <%= f.label(:email) %>
   <%= f.text_field :email, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label(:department, 'Sales', :value => 'sales', checked: true) %>
    <%= f.radio_button(:department, 'sales') %>
    <%= f.label(:department, 'Marketing', :value => 'marketing')%>
    <%= f.radio_button(:department, 'marketing')%>
    <%= f.label(:department, 'Technical', :value => 'technical')%>
    <%= f.radio_button(:department, 'technical')%>
</div>
<div class="form-group">
   <%= f.label(:message) %>
   <%= f.text_area :message, class: "form-control" %>
</div>
<%= f.submit({class: "btn btn-primary"}) %>
<% end %>
